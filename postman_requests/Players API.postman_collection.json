{
    "info": {
        "_postman_id": "9e6a2354-f673-491d-93f5-a6356d384331",
        "name": "Players API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "_exporter_id": "17271797"
    },
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Authenticate Device",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "X-GameKey",
                                "value": "{{gameKey}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"deviceId\": \"device123\",\n  \"metadata\": {\n    \"platform\": \"ios\",\n    \"version\": \"1.0.0\"\n  }\n}",
                            "options": {"raw": {"language": "json"}}
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/players/authenticate/device",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "players", "authenticate", "device"]
                        }
                    }
                },
                {
                    "name": "Authenticate Custom",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "X-GameKey",
                                "value": "{{gameKey}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"customId\": \"custom123\",\n  \"metadata\": {\n    \"role\": \"player\",\n    \"level\": 1\n  },\n  \"create\": true\n}",
                            "options": {"raw": {"language": "json"}}
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/players/authenticate/custom",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "players", "authenticate", "custom"]
                        }
                    }
                },
                {
                    "name": "Refresh Session",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "X-GameKey",
                                "value": "{{gameKey}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"sessionId\": \"{{sessionId}}\"\n}",
                            "options": {"raw": {"language": "json"}}
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/players/authenticate/refresh",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "players", "authenticate", "refresh"]
                        }
                    }
                },
                {
                    "name": "Authenticate Player",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "X-GameKey",
                                "value": "{{gameKey}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"player1\",\n  \"password\": \"password123\"\n}",
                            "options": {"raw": {"language": "json"}}
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/players/authenticate",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "players", "authenticate"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Player Profile",
            "item": [
                {
                    "name": "Get Current Player",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [{"key": "token", "value": "{{accessToken}}", "type": "string"}]
                        },
                        "method": "GET",
                        "header": [
                            {
                                "key": "X-GameKey",
                                "value": "{{gameKey}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/players/me",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "players", "me"]
                        }
                    }
                },
                {
                    "name": "Get Player By Id",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [{"key": "token", "value": "{{accessToken}}", "type": "string"}]
                        },
                        "method": "GET",
                        "header": [
                            {
                                "key": "X-GameKey",
                                "value": "{{gameKey}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/players/{{playerId}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "players", "{{playerId}}"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Notifications",
            "item": [
                {
                    "name": "Get Player Notifications",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/players/{{username}}/notifications?pageIndex=1&pageSize=10&status=Sent",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "players", "{{username}}", "notifications"],
                            "query": [
                                {"key": "pageIndex", "value": "1"},
                                {"key": "pageSize", "value": "10"},
                                {"key": "status", "value": "Sent"}
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Attributes",
            "item": [
                {
                    "name": "Get Attributes",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/players/{{username}}/attributes/{{collection}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "players", "{{username}}", "attributes", "{{collection}}"]
                        }
                    }
                },
                {
                    "name": "Get Attribute",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/players/{{username}}/attributes/{{collection}}/{{key}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "players", "{{username}}", "attributes", "{{collection}}", "{{key}}"]
                        }
                    }
                },
                {
                    "name": "Set Attribute",
                    "request": {
                        "method": "PUT",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"key\": \"level\",\n  \"value\": 5\n}",
                            "options": {"raw": {"language": "json"}}
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/players/{{username}}/attributes/{{collection}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "players", "{{username}}", "attributes", "{{collection}}"]
                        }
                    }
                },
                {
                    "name": "Delete Attribute",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/players/{{username}}/attributes/{{collection}}/{{key}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "players", "{{username}}", "attributes", "{{collection}}", "{{key}}"]
                        }
                    }
                }
            ]
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "if (!pm.environment.get('baseUrl')) {",
                    "    pm.environment.set('baseUrl', 'https://localhost:7257');",
                    "}"
                ]
            }
        }
    ]
}