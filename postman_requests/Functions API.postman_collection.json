    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "if (!pm.environment.get('baseUrl')) {",
                    "    pm.environment.set('baseUrl', 'https://localhost:7257');",
                    "}",
                    "",
                    "if (!pm.environment.get('startDate')) {",
                    "    pm.environment.set('startDate', new Date(Date.now() - 24*60*60*1000).toISOString());",
                    "}",
                    "",
                    "if (!pm.environment.get('endDate')) {",
                    "    pm.environment.set('endDate', new Date().toISOString());",
                    "}"
                ]
            }
        }
    ]
