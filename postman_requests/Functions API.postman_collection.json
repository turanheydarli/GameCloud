    "item": [
        {
            "name": "Functions",
            "item": [
                {
                    "name": "Get Functions",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [{"key": "token", "value": "{{accessToken}}", "type": "string"}]
                        },
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/games/{{gameId}}/functions?pageIndex=1&pageSize=10",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "games", "{{gameId}}", "functions"],
                            "query": [
                                {"key": "pageIndex", "value": "1"},
                                {"key": "pageSize", "value": "10"}
                            ]
                        }
                    }
                },
                {
                    "name": "Get Function",
