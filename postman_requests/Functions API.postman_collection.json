                            "type": "bearer",
                            "bearer": [{"key": "token", "value": "{{accessToken}}", "type": "string"}]
                        },
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/games/{{gameId}}/functions/{{functionId}}",
